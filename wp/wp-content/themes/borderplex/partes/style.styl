/*generales*/

::-moz-selection
	background casi__negro
	color #fff
	text-shadow none

::selection
	background casi__negro
	color #fff
	text-shadow none

body
html
	font-size: 17px

section
	margin: 0
	overflow: hidden
	width: 100%
header
	height: auto
	width: 100%
	figure
		margin: 20px 0
		width: 75%

.header_right
	align-items(center)
	background: #F1F1F1
	color: #000
	flex()
	font-size: .7em
	// height: 37px
	justify-content(space-between)
	margin: 0
	padding: 5px 5px 0 0
	position: absolute
	right: 0
	top: 0
	ul
		flex()
		padding-left: 0
		li
			list-style: none
			flex()
			align-items: center
			margin-left: 1rem
			&.menu-item-12
			&.menu-item-13
			&.menu-item-14
				&:before
					content: ''
					height: 16px
					width: 16px
					margin-right: 0.5rem
					display inline-block
			&.menu-item-12
				&:before
					bg url(images/icon--subscribe.png)
			&.menu-item-13
				&:before
					bg url(images/icon--investors.png)
			&.menu-item-14
				&:before
					bg url(images/icon--mediaKit.png)
	.search
		margin-left 1rem
		fieldset
			border none
			padding 0
			flex()
			align-items(center)
		input[type="text"]
			bg none
			border: none
			margin-left 0.4rem
			uppercase()

	.social_media
		margin: 0
		absolute()
		bottom -2.5rem
		right: 2rem
		a
			display: inline-block
			margin-left 0.5rem

.breadcrumb
	background: #224294
	padding: 0.3rem 0 0.5rem
	height: 24px
	color: #fff
	margin: 0 auto
	.wrap
		align-items(center)
		flex()
		justify-content(space-between)
	.a_breadcrum
		flex_grow(1)
		margin: 0 auto
		padding: 4px 0 0 0

.breadcrumb--list
	flex()
	margin 0
	padding: 0
	li
		list-style: none
		margin 0 0.2rem 0

.block--gray
	margin-bottom: 0.4rem

h3
	font-size: 2em
p
	font-size: 1.2em

.slider
	position: relative
	figure
		max-height: 460px
		height: 460px
		overflow hidden
		relative()
		img
			absolute()
			left 50%
			top 50%
			transformar( translate(-50%, -50%) )
			width: 100%
			height: auto

.home--slider
	.bx-wrapper
		margin-bottom 0
		.bx-pager
			bottom 30px
			&.bx-default-pager a
				round 50%
				bg blanco
				height: 18px
				width: 18px
			&.bx-default-pager a:hover
			&.bx-default-pager a.active
				bg #fbb716

.slider_caption
	background: #4874B9
	color: #fff
	//height: 200px
	padding: 20px
	position: absolute
	right: 20px
	top: 30%
	width: 435px
	p
		font-size: 1.3em
		margin: 0 0 20px 0

.btn
	width: 185px
	text-transform: uppercase
	font-size: 1em
	height: 40px
	display: block
	position: relative
	font-weight: bold
	color: #fff
.btn_t
	width: 100%
	height: 100%
	position: absolute
	top: 0
.btn_t a
	margin: 5% 0 0 12%
	display: block
.btn_arrow
	background: #fff
	height: 100%
	opacity: 0.6
	position: absolute
	right: 0
	top: 0
	width: 20%
.btn img
	position: absolute
	right: 7%
	top: 10%
	width: 5%
.yellow
	background: #FBB716
.green
	background: #00963B
.green_b
	width: 100%
	margin: 0
	height: 40px
	background: #2CB783
.col_2
	width: 49.8%
	margin: 0
	display: inline-block
	vertical-align: top
	padding: 70px 0
	h3
		margin: 10px 15% 0 15%
	p
	ol
	ul
		margin: 20px 15%
		padding: 0
	a
	li
	p
		font-style: italic
		color: #565656
		line-height: 1.5em
.map
	width: 100%

.services_home
	width: 47%
	margin: 80px auto
	relative()
	figure
		margin: 0 0 -40px 0
	.btn
		absolute()
		right: 0

.gray
	background: #ebebeb
.news_box
	border-right: 1px solid #5F5F5F
.news
	margin: 40px 10% 60px 10%
	p
		margin: 0 0 20px 0!important
		font-style: normal!important
		line-height: 1.2em !important
		display: inline-block
		vertical-align: top
		&.title
			font-weight: bold
			font-style: normal !important
			color: #000 !important
			margin: 10px 0 5px 0 !important
			display: inline-block
			vertical-align: top
	&.news__highlights
		flex()
		justify-content(space-between)
	.news--text
		width: unquote( calc( 100% - 160px ) )

figure.highlights
	width: 143px
	height: 143px
	display: block
	vertical-align: top

footer
	display: block
	p
		display: inline-block
		vertical-align: top
		margin: 20px 0 0 60px
		color: #fff
		font-style: normal
		font-size: 1em
.blue_bar
	background: #224294
	width: 100%
	height: 60px
	color: #fff
.info
	width: 70%
	display: inline-block
	margin: 0 0  0 5%
.redes_footer
	width: 20%
	display: inline-block
	vertical-align: top
	margin: 0 0 0 40px
	a
		width: 30px
		background: #fff
		height: 30px
		display: inline-block
		vertical-align: top
		margin: 15px 0 0 30px
		color: #00963B
		border-radius: 49%
.twitter_footer img
	margin: 8px 0 0 8px
.facebook_footer img
	margin: 8px 0 0 12px
footer figure
	width: 60%
	margin: 0 auto
footer figure img
	margin: 0 auto
.image_qua
	margin: 60px auto
	width: 90%
.img_bg
	background-repeat: no-repeat
	background-size: cover
	background-color: #4873b8
	//height: 600px
	width: auto
	a
	li
	p
		font-style: normal
		color: #fff!important
.white
	color: #fff!important
.p_sp
	margin: 130px 10% 0 10%!important

.qua_box
	width: 80%
	margin: 0 auto
	min-height: 250px
	padding: 0 0 40px 0
	figure
		background: #eee
		margin: 30px 20px 0 0
		max-width: 220px
		max-height: 220px
		display: inline-block
		vertical-align: top
	h4
		font-size: 1.2em
		display: inline-block
		vertical-align: top
	p
		display: inline-block
		vertical-align: top
		margin: 15px 0 0 0

.q_info
	display: inline-block
	vertical-align: top
	margin: 30px 0
	width: 70%
.col_1
	width: 80%
	margin: 60px auto
.col_1 h3
	font-style: normal
.col_1 p
	font-style: normal
.col_1 table
	margin: 30px auto
	width: 100%
	text-align: left
.col_1 table th
	border-top: 1px #000 solid
	border-bottom: 1px #000 solid
	padding: 10px 0
.col_1 table tbody tr
	margin: 0 0 10px 0
.tabla
	width: 100%
	margin: 30px auto
.tabla_hd
	display: inline-block
	vertical-align: top
	width: 100%
	border-top: 1px solid #000
	border-bottom: 1px solid #000
	padding: 10px 0
.tabla_cont
	display: inline-block
	vertical-align: top
	width: 100%
.hd_tr
	display: inline-block
	vertical-align: top
	font-weight: bold
	padding: 0 5px
.cont_tr
	display: inline-block
	vertical-align: top
	border-right: 1px solid #000
	padding: 10px 5px
.tr1
	width: 18%
.tr2
	width: 20%
.cont_tr:last-child
	border-right: 0


.acordeon
	&:hover
		.acordeon--texto
			max-height: 300vh

.acordeon--texto
	max-height: 0
	overflow: hidden
	transicion( 0.3s all ease )

.acordeon_gray
	cursor pointer
	padding: 0.4rem 0
	margin-bottom: 0.4rem
	h3
		margin: 0 30px !important;
		flex_grow(1)
	.acordeon_gray--btn
		bg #4873b8
		cursor pointer
		padding 0.6rem 1.5rem
		img
			block()
			transformar(rotate(90deg))
	.wrap
		flex()
		justify-content(space-between)
		align-items(center)

