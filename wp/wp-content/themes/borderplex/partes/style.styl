/* <---------- Valores Stylus ----------> */
@import "valoresDefault.styl"
@import "style--fonts.styl"
@import "style--reset.styl"

@import "jquery.bxslider.styl"

// el__color = #474646
// color__fondo = #f3f3f3
color__resaltado = #4874B9
// f__familia = 'Lato', sans-serif;
