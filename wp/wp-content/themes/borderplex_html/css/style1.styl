/*fuentes*/
@import url(https://fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic)
/*reset*/
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
main,
nav,
section,
summary
  display: block

audio,
canvas,
video
  display: inline-block

audio:not([controls])
  display: none
  height: 0

[hidden]
  display: none

html
  font-family: Lato
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  margin: 0

a
  color: inherit
  text-decoration: none

a:focus
  outline: 0

a:active,
a:hover
  outline: 0

abbr[title]
  border-bottom: 0

b,
strong
  font-weight: bold

dfn
  font-style: italic

hr
  -moz-box-sizing: content-box
  box-sizing: content-box
  height: 0

mark
  background: #ff0
  color: #000

code,
kbd,
pre,
samp
  font-family: sans-serif
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

pre
  white-space: pre-wrap

q
  quotes: "\201C" "\201D" "\2018" "\2019"

small
  font-size: 80%

sub,
sup
  font-size: 75%
  line-height: 0
  position: relative
  vertical-align: baseline

sup
  top: -.5em

sub
  bottom: -.25em

img
  border: 0
  margin: inherit

svg:not(:root)
  overflow: hidden

figure
  margin: 0
  padding: 0
  display: block
  vertical-align: top

figure img
  width: inherit
  height: inherit
  display: inherit
  margin: inherit

figcaption
  width: inherit
  margin: 0
  font-family: 'Myriad Bold Cond'
  font-size: 1em
  width: 100%

fieldset
  border: 1px solid #c0c0c0
  margin: 0 2px
  padding: .35em .625em .75em

legend
  border: 0
  padding: 0

button,
input,
select,
textarea
  font-family: inherit
  font-size: 100%
  margin: 0

button,
input
  line-height: normal

button,
select
  text-transform: none

button,
html input[type="button"],
input[type="reset"],
input[type="submit"]
  -webkit-appearance: button
  cursor: pointer

button[disabled],
html input[disabled]
  cursor: default

input[type="checkbox"],
input[type="radio"]
  box-sizing: border-box
  padding: 0

input[type="search"]
  -webkit-appearance: textfield
  -moz-box-sizing: content-box
  -webkit-box-sizing: content-box
  box-sizing: content-box

input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
  -webkit-appearance: none

button::-moz-focus-inner,
input::-moz-focus-inner
  border: 0
  padding: 0

textarea
  overflow: auto
  vertical-align: top

table
  border-collapse: collapse
  border-spacing: 0

p
  margin: 0
  padding: 0

h2,
h3,
h4
  margin: 0
  padding: 0

span
  margin: 0
  padding: 0

figure
  margin: 0
  padding: 0

figure img
  margin: 0
  padding: 0

table
  margin: 0

/*generales*/
section
  width: 100%
  overflow: hidden
  margin: 0

header
  width: 100%
  height: auto

header figure
  display: inline-block
  margin: 10px 0 10px 10px
  width: 75%

.header_right
  margin: 0
  background: #F1F1F1
  color: #000
  font-size: .7em
  padding: 5px 5px 0 0
  height: 20px
  top: 0
  position: absolute
  right: 0
  width: 450px
  height: 37px

.header_right ul
  display: inline-block

.header_right ul li
  display: inline-block

.search
  display: inline-block

.social_media
  margin: 0

.social_media a
  display: inline-block

nav
  background: #4874B9
  height: 50px
  color: #fff
  margin: 0 auto

nav ul
  width: 90%
  margin: 0 auto
  padding: 13px 0 0 0

nav ul li
  display: inline-block
  margin: 0 6%

nav ul li:last-child
  margin: 0 0 0 3%

nav ul li:first-child
  margin: 0 3% 0 0

.breadcrumb
  background: #224294
  height: 30px
  color: #fff
  margin: 0 auto

.a_breadcrum
  width: 90%
  margin: 0 auto
  padding: 4px 0 0 0

h3
  font-size: 2em

p
  font-size: 1.2em

.slider
  position: relative

.slider figure img
  width: 100%
  overflow: hidden

.slider_caption
  background: #4874B9
  position: absolute
  width: 435px
  height: 200px
  color: #fff
  right: 20px
  top: 160px
  padding: 20px

.slider_caption p
  font-size: 1.3em
  margin: 0 0 20px 0

.btn
  width: 185px
  text-transform: uppercase
  font-size: 1em
  height: 40px
  display: block
  position: relative
  font-weight: bold
  color: #fff

.btn_t
  width: 100%
  height: 100%
  position: absolute
  top: 0

.btn_t a
  margin: 5% 0 0 12%
  display: block

.btn_arrow
  width: 20%
  background: #fff
  filter: alpha(opacity=60)
  /* IE */
  -moz-opacity: 0.6
  /* Mozilla */
  opacity: 0.6
  /* CSS3 */
  height: 100%
  right: 0
  position: absolute
  top: 0

.btn img
  position: absolute
  right: 7%
  top: 10%
  width: 5%

.yellow
  background: #FBB716

.green
  background: #00963B

.green_b
  width: 100%
  margin: 0
  height: 40px
  background: #2CB783

.col_2
  width: 49.8%
  margin: 0
  display: inline-block
  vertical-align: top

.col_2 h3
  margin: 80px 15% 0 15%

.col_2 p
  margin: 20px 15%
  font-style: italic
  color: #565656
  line-height: 1.5em

.map
  width: 100%

.services_home
  width: 47%
  margin: 80px auto

.services_home figure
  margin: 0 0 -40px 0

.gray
  background: #F2F2F2

.news_box
  border-right: 1px solid #5F5F5F

.news
  margin: 40px 10% 60px 10%

.news p
  margin: 0 0 20px 0!important
  font-style: normal!important
  line-height: 1.2em !important
  display: inline-block
  vertical-align: top

.news p.title
  font-weight: bold
  font-style: normal!important
  color: #000!important
  margin: 10px 0 5px 0!important
  display: inline-block
  vertical-align: top

figure.highlights
  width: 143px
  height: 143px
  background: #000
  display: inline-block
  vertical-align: top

footer
  display: block

.blue_bar
  background: #224294
  width: 100%
  height: 60px
  color: #fff

.info
  width: 70%
  display: inline-block
  margin: 0 0  0 5%

.redes_footer
  width: 20%
  display: inline-block
  vertical-align: top
  margin: 0 0 0 40px

footer p
  display: inline-block
  vertical-align: top
  margin: 20px 0 0 60px
  color: #fff
  font-style: normal
  font-size: 1em

footer a
  width: 30px
  background: #fff
  height: 30px
  display: inline-block
  vertical-align: top
  margin: 15px 0 0 30px
  color: #00963B
  border-radius: 49%

.twitter_footer img
  margin: 8px 0 0 8px

.facebook_footer img
  margin: 8px 0 0 12px

footer figure
  width: 60%
  margin: 0 auto

footer figure img
  margin: 0 auto

.image_qua
  margin: 60px auto
  width: 90%

.white
  color: #fff!important

.img_bg
  background: url(../images/back_quality.png) no-repeat
  background-size: cover
  height: 600px
  width: auto

.img_bg p
  font-style: normal

.p_sp
  margin: 130px 10% 0 10%!important

.qua_box
  width: 80%
  margin: 0 auto
  height: 250px
  padding: 0 0 40px 0

.qua_box figure
  background: #eee
  margin: 30px 20px 0 0
  width: 220px
  height: 220px
  display: inline-block
  vertical-align: top

.qua_box h4
  font-size: 1.2em
  display: inline-block
  vertical-align: top

.qua_box p
  display: inline-block
  vertical-align: top
  margin: 15px 0 0 0

.q_info
  display: inline-block
  vertical-align: top
  margin: 30px 0
  width: 70%

.col_1
  width: 80%
  margin: 60px auto

.col_1 h3
  font-style: normal

.col_1 p
  font-style: normal

.col_1 table
  margin: 30px auto
  width: 100%
  text-align: left

.col_1 table th
  border-top: 1px #000 solid
  border-bottom: 1px #000 solid
  padding: 10px 0

.col_1 table tbody tr
  margin: 0 0 10px 0

.tabla
  width: 100%
  margin: 30px auto

.tabla_hd
  display: inline-block
  vertical-align: top
  width: 100%
  border-top: 1px solid #000
  border-bottom: 1px solid #000
  padding: 10px 0

.tabla_cont
  display: inline-block
  vertical-align: top
  width: 100%

.hd_tr
  display: inline-block
  vertical-align: top
  font-weight: bold
  padding: 0 5px

.cont_tr
  display: inline-block
  vertical-align: top
  border-right: 1px solid #000
  padding: 10px 5px

.tr1
  width: 18%

.tr2
  width: 20%

.cont_tr:last-child
  border-right: 0

